<Window x:Class="intro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:intro"
        mc:Ignorable="d"
        Title="Mitt första fönsterprogram" Height="225" Width="400" 
        Background="lightgray">
    <StackPanel Margin="10">
    <Label Margin="5" FontSize="30" FontWeight="bold">Hej världen!!!</Label>
    <StackPanel Orientation="Horizontal">
    <Label Margin="5">Ange namn:</Label>
    <TextBox Margin="5" Width="50" Height="20"></TextBox>
    <Button Background="white" Foreground="black" Height="20">Klicka här!</Button>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
    <Label Margin="5">Ange lösenord:</Label>
    <TextBox Margin="5" Width="50" Height="20"></TextBox>
    <Button Background="white" Foreground="black" Height="20">Klicka här!</Button>
    </StackPanel>
    </StackPanel>
</Window>
