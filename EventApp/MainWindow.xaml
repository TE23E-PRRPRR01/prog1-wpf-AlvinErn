<Window x:Class="EventApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="225" Width="175" MinHeight="245" MinWidth="175" MaxHeight="300" MaxWidth="1000"
        SizeToContent="WidthAndHeight">
    <Grid>
    <StackPanel Margin="5" Background="orange">
    <Label Margin="5" FontSize="15" FontWeight="bold">Ange en text:</Label>
    <TextBox Name="tbxText" Margin="5" Height="70" BorderBrush="black" TextWrapping="wrap"></TextBox>
    <Button Click="KlickOK" Margin="5" FontWeight="bold" BorderBrush="black">OK</Button>
    <Button Click="KlickAvbryt" Margin="5" FontWeight="bold" BorderBrush="black">Avbryt</Button>
    </StackPanel>

    </Grid>
</Window>
