<Window x:Class="SlumpaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlumpaApp"
        mc:Ignorable="d"
        Title="Slumpa"
        MaxHeight="500" MaxWidth="400"
        SizeToContent="WidthAndHeight"
        >
    <StackPanel Margin="10">
    <Label Padding="10">Slumpa ett tal mellan 1 och "maxtal"</Label>
    <WrapPanel>
    <Label Padding="10">Ange maxtal:</Label>
    <TextBox Name="maxTal" Margin="5" MinWidth="35" Height="20"></TextBox>
    </WrapPanel>
    <Button Click="KlickSlumpa" Margin="5" FontWeight="bold">Slumpa!</Button>
    <TextBox Name="Resultat" Margin="5" Height="60"></TextBox>
    <Button Click="KlickRensa" FontWeight="bold" Background="red" Margin="5">Rensa</Button>
    <TextBox Name="felMeddelande" Margin="5" MinWidth="0" MinHeight="20" MaxHeight="60" TextWrapping="wrap" MaxWidth="200"></TextBox>
    
    </StackPanel>
</Window>
